---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// 1. Obtener el slug de la URL
const { slug } = Astro.params;

// 2. Obtener todas las subcategorías y encontrar la que coincide con el slug
const allSubcategories = await getCollection('subcategorias');
const subcategory = allSubcategories.find(subcat => subcat.slug === slug);

// Si la subcategoría no existe, redirigir a 404 o mostrar un mensaje
if (!subcategory) {
    return Astro.redirect('/404'); // O puedes renderizar una página de error personalizada
}

// 3. Obtener todos los productos y filtrar por la subcategoría actual
const allProducts = await getCollection('productos');
const productsInSubcategory = allProducts.filter(product => 
    !product.data.draft && product.data.subcategory === subcategory.data.title
);

// 4. Preparar los datos para el Layout y el contenido de la página
const pageTitle = subcategory.data.pageTitle || subcategory.data.title;
const pageDescription = subcategory.data.description || `Descubre nuestra colección de ${subcategory.data.title} en Siempre Divinas.`;
const seoTitle = subcategory.data.seoTitle || pageTitle;
const seoDescription = subcategory.data.seoDescription || pageDescription;

---

<Layout title={seoTitle} description={seoDescription}>
    <main class="py-12 md:py-16">
        <div class="container mx-auto px-4">
            <!-- Título y Descripción de la Subcategoría -->
            <h1 class="text-4xl md:text-5xl font-serif text-center mb-6 italic">
                <span class="text-pink-400">{pageTitle}</span>
            </h1>
            {subcategory.data.description && (
                <p class="text-center max-w-3xl mx-auto leading-relaxed text-lg text-gray-700 mb-10">
                    {subcategory.data.description}
                </p>
            )}

            <!-- Mensaje si no hay productos -->
            {productsInSubcategory.length === 0 && (
                <div class="text-center py-10 text-gray-500">
                    <p class="text-xl mb-4">¡Ups! Parece que no hay productos en esta subcategoría todavía.</p>
                    <a href="/" class="inline-block bg-pink-brand hover:bg-white hover:text-pink-brand text-white font-bold py-3 px-6 rounded-full transition-all duration-300 transform hover:scale-105 shadow-md uppercase text-sm border-2 border-pink-brand">
                        Volver a la página principal
                    </a>
                </div>
            )}

            <!-- Grid de Productos de la Subcategoría -->
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
                {productsInSubcategory.map((product) => (
                    <a href={`/productos/${product.slug}`} class="group block">
                        <div class="relative overflow-hidden rounded-lg shadow-sm border border-gray-100 aspect-[3/4] bg-gray-100">
                            <img src={product.data.image} alt={product.data.title} class="w-full h-full object-cover transition duration-500 group-hover:scale-105" loading="lazy" />
                            <div class="absolute bottom-0 left-0 w-full bg-pink-brand/90 p-3 translate-y-full group-hover:translate-y-0 transition duration-300 text-center">
                                <span class="text-white font-bold text-sm uppercase italic">Ver detalles divinos &rarr;</span>
                            </div>
                        </div>
                        <div class="mt-3 text-center">
                            <h3 class="font-medium text-gray-900 group-hover:text-pink-brand transition">{product.data.title}</h3>
                            <p class="text-gold-600 font-bold text-lg">{product.data.price}€</p>
                        </div>
                    </a>
                ))}
            </div>
        </div>
    </main>
</Layout>
```
