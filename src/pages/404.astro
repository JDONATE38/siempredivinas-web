---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// 1. Buscamos los productos
const allProducts = await getCollection('productos');

// 2. Filtramos los borradores y cogemos 4 al azar
const suggestedProducts = allProducts
    .filter(p => !p.data.draft)
    .slice(0, 4); 
---

<Layout title="Página no encontrada | Siempre Divinas" noindex={true}>
  <main class="container mx-auto px-4 py-20 text-center flex flex-col gap-24">
    
    <div class="flex flex-col items-center justify-center">
        <h1 class="text-9xl font-bold text-pink-100 leading-none">404</h1>
        <h2 class="text-3xl font-serif font-bold text-gray-900 -mt-8 mb-6">¡Vaya! Esta página no existe</h2>
        <p class="text-gray-600 text-lg mb-10 max-w-md mx-auto">
            Parece que te has perdido, pero no te preocupes... ¡mira qué cosas tan bonitas tenemos para ti!
        </p>
        
        <a href="/" class="bg-black text-white px-10 py-4 rounded-full font-bold hover:bg-gray-800 transition shadow-xl hover:-translate-y-1 inline-block">
            VOLVER AL INICIO
        </a>
    </div>

    {suggestedProducts.length > 0 && (
        <div class="w-full border-t border-gray-200 pt-20">
            <h3 class="text-3xl font-serif font-bold mb-12 text-gray-800">
                Quizás te interese...
            </h3>
            
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 text-left">
                {suggestedProducts.map((product) => (
                    <a href={`/productos/${product.slug}`} class="group block bg-white rounded-lg hover:shadow-lg transition duration-300">
                        <div class="relative overflow-hidden rounded-t-lg aspect-[3/4] bg-gray-100 mb-4">
                            <img 
                                src={product.data.image} 
                                alt={product.data.title} 
                                class="w-full h-full object-cover transition duration-500 group-hover:scale-105"
                            />
                            <div class="absolute bottom-0 left-0 w-full bg-white/90 p-2 translate-y-full group-hover:translate-y-0 transition duration-300 text-center text-sm font-bold text-pink-600">
                                Ver vestido
                            </div>
                        </div>
                        <div class="px-2 pb-4">
                            <h4 class="font-medium text-gray-900 group-hover:text-pink-600 transition truncate">{product.data.title}</h4>
                            <p class="text-gold-600 font-bold text-lg">{product.data.price}€</p>
                        </div>
                    </a>
                ))}
            </div>
        </div>
    )}

  </main>
</Layout>