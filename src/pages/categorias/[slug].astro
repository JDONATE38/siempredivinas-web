---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// 1. Obtener el slug de la URL
const { slug } = Astro.params;

// 2. Obtener todas las categorías y encontrar la que coincide con el slug
const allCategories = await getCollection('categorias');
const category = allCategories.find(cat => cat.slug === slug);

// Si la categoría no existe, redirigir a 404 o mostrar un mensaje
if (!category) {
    return Astro.redirect('/404'); // O puedes renderizar una página de error personalizada
}

// 3. Obtener todos los productos y filtrar por la categoría actual
const allProducts = await getCollection('productos');
const productsInCategory = allProducts.filter(product => 
    !product.data.draft && product.data.category === category.data.title
);

// 4. Preparar los datos para el Layout y el contenido de la página
const pageTitle = category.data.pageTitle || category.data.title;
const pageDescription = category.data.description || `Descubre nuestra colección de ${category.data.title} en Siempre Divinas.`;
const seoTitle = category.data.seoTitle || pageTitle;
const seoDescription = category.data.seoDescription || pageDescription;

---

<Layout title={seoTitle} description={seoDescription}>
    <main class="py-12 md:py-16">
        <div class="container mx-auto px-4">
            <!-- Título y Descripción de la Categoría -->
            <h1 class="text-4xl md:text-5xl font-serif text-center mb-6 italic">
                <span class="text-pink-400">{pageTitle}</span>
            </h1>
            {category.data.description && (
                <p class="text-center max-w-3xl mx-auto leading-relaxed text-lg text-gray-700 mb-10">
                    {category.data.description}
                </p>
            )}

            <!-- Mostrar Subcategorías de esta Categoría Principal -->
            {subcategoriesForThisCategory.length > 0 && (
                <div class="mb-10">
                    <h2 class="text-3xl font-serif text-center mb-6 italic">
                        Explora nuestras <span class="text-pink-400">Subcategorías</span>
                    </h2>
                    <div class="flex flex-wrap justify-center gap-4">
                        {subcategoriesForThisCategory.map((subcat) => (
                            <a href={`/subcategorias/${subcat.slug}`} class="inline-block bg-gray-100 hover:bg-pink-brand hover:text-white text-gray-800 font-bold py-2 px-4 rounded-full transition-all duration-300 transform hover:scale-105 shadow-sm text-sm uppercase">
                                {subcat.data.title}
                            </a>
                        ))}
                    </div>
                </div>
            )}

            <h2 class="text-3xl font-serif text-center mb-6 italic">
                Todos los productos de <span class="text-pink-400">{pageTitle}</span>
            </h2>

            <!-- Mensaje si no hay productos -->
            {productsInCategory.length === 0 && (
                <div class="text-center py-10 text-gray-500">
                    <p class="text-xl mb-4">¡Ups! Parece que no hay productos en esta categoría todavía.</p>
                    <a href="/" class="inline-block bg-pink-brand hover:bg-white hover:text-pink-brand text-white font-bold py-3 px-6 rounded-full transition-all duration-300 transform hover:scale-105 shadow-md uppercase text-sm border-2 border-pink-brand">
                        Volver a la página principal
                    </a>
                </div>
            )}

            <!-- Grid de Productos de la Categoría -->
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
                {productsInCategory.map((product) => (
                    <a href={`/productos/${product.slug}`} class="group block">
                        <div class="relative overflow-hidden rounded-lg shadow-sm border border-gray-100 aspect-[3/4] bg-gray-100">
                            <img src={product.data.image} alt={product.data.title} class="w-full h-full object-cover transition duration-500 group-hover:scale-105" loading="lazy" />
                            <div class="absolute bottom-0 left-0 w-full bg-pink-brand/90 p-3 translate-y-full group-hover:translate-y-0 transition duration-300 text-center">
                                <span class="text-white font-bold text-sm uppercase italic">Ver detalles divinos &rarr;</span>
                            </div>
                        </div>
                        <div class="mt-3 text-center">
                            <h3 class="font-medium text-gray-900 group-hover:text-pink-brand transition">{product.data.title}</h3>
                            <p class="text-gold-600 font-bold text-lg">{product.data.price}€</p>
                        </div>
                    </a>
                ))}
            </div>
        </div>
    </main>
</Layout>
