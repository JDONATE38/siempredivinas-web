---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const allCategories = await getCollection('categorias');
  return allCategories.map((cat) => ({
    params: { slug: cat.slug },
    props: { category: cat },
  }));
}

const { category } = Astro.props;

// 1. OBTENER SUBCATEGORÍAS ASOCIADAS
// Buscamos subcategorías que tengan a ESTA categoría como padre (o uno de sus padres)
const allSubcategories = await getCollection('subcategorias');
const subcategoriesForThisCategory = allSubcategories.filter(subcat => {
    const parents = subcat.data.parentCategory;
    
    // Si no tiene padre, no sale
    if (!parents) return false;

    // Si es una lista (formato nuevo), miramos si incluye el título de esta categoría
    if (Array.isArray(parents)) {
        return parents.includes(category.data.title);
    }
    
    // Si es texto (formato antiguo), comparamos directo
    return parents === category.data.title || parents === category.slug;
});

// 2. OBTENER PRODUCTOS DE LA CATEGORÍA
const allProducts = await getCollection('productos');
const productsInCategory = allProducts.filter(product => {
    if (product.data.draft) return false;
    
    // Obtenemos las categorías del producto
    const productCats = product.data.category; 
    
    // Si el producto no tiene categorías asignadas, no sale aquí
    if (!productCats) return false;

    // Si es una lista, miramos si incluye esta categoría
    if (Array.isArray(productCats)) {
        return productCats.includes(category.data.title);
    }
    
    // Si es texto, comparamos directo
    return productCats === category.data.title || productCats === category.slug;
});

const pageTitle = category.data.pageTitle || category.data.title;
const pageDescription = category.data.description || `Descubre nuestra colección de ${category.data.title} en Siempre Divinas.`;
const seoTitle = category.data.seoTitle || pageTitle;
const seoDescription = category.data.seoDescription || pageDescription;
---

<Layout title={seoTitle} description={seoDescription}>
    <main class="py-12 md:py-16">
        <div class="container mx-auto px-4">
            <h1 class="text-4xl md:text-5xl font-serif text-center mb-6 italic">
                <span class="text-pink-400">{pageTitle}</span>
            </h1>
            
            {category.data.description && (
                <p class="text-center max-w-3xl mx-auto leading-relaxed text-lg text-gray-700 mb-10">
                    {category.data.description}
                </p>
            )}

            {subcategoriesForThisCategory.length > 0 && (
                <div class="mb-12 border-b border-gray-100 pb-8">
                    <h2 class="text-2xl font-serif text-center mb-6 italic text-gray-600">
                        Filtrar por <span class="text-pink-400">Sección</span>
                    </h2>
                    <div class="flex flex-wrap justify-center gap-3">
                        {subcategoriesForThisCategory.map((subcat) => (
                            <a href={`/subcategorias/${subcat.slug}`} class="inline-block bg-white border border-gray-200 hover:border-pink-400 hover:text-pink-600 text-gray-700 px-6 py-2 rounded-full transition-all duration-300 shadow-sm text-sm uppercase font-bold tracking-wide">
                                {subcat.data.title}
                            </a>
                        ))}
                    </div>
                </div>
            )}

            <h2 class="text-xl text-center mb-8 uppercase tracking-widest text-gray-400 font-semibold">
